{
  "name": "use-color",
  "version": "2.0.0-beta.1",
  "description": "Type-safe CSS colors for TypeScript",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junhoyeo/use-color.git"
  },
  "author": "Junho Yeo <hanaro0704@gmail.com>",
  "license": "MIT",
  "keywords": [
    "color",
    "typescript",
    "type-safe",
    "oklch",
    "css",
    "hex",
    "rgb",
    "accessibility",
    "wcag"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "size-limit": "size-limit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepublishOnly": "pnpm run build"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "expect-type": "^1.3.0",
    "fast-check": "^4.5.2",
    "size-limit": "^12.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}

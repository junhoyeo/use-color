{
	"name": "use-color",
	"version": "2.0.0",
	"description": "Type-safe CSS colors for TypeScript",
	"type": "module",
	"sideEffects": false,
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./core": {
			"import": {
				"types": "./dist/core.d.ts",
				"default": "./dist/core.js"
			},
			"require": {
				"types": "./dist/core.d.cts",
				"default": "./dist/core.cjs"
			}
		},
		"./a11y": {
			"import": {
				"types": "./dist/a11y.d.ts",
				"default": "./dist/a11y.js"
			},
			"require": {
				"types": "./dist/a11y.d.cts",
				"default": "./dist/a11y.cjs"
			}
		},
		"./names": {
			"import": {
				"types": "./dist/names.d.ts",
				"default": "./dist/names.js"
			},
			"require": {
				"types": "./dist/names.d.cts",
				"default": "./dist/names.cjs"
			}
		},
		"./p3": {
			"import": {
				"types": "./dist/p3.d.ts",
				"default": "./dist/p3.js"
			},
			"require": {
				"types": "./dist/p3.d.cts",
				"default": "./dist/p3.cjs"
			}
		}
	},
	"typesVersions": {
		"*": {
			"core": [
				"./dist/core.d.ts"
			],
			"a11y": [
				"./dist/a11y.d.ts"
			],
			"names": [
				"./dist/names.d.ts"
			],
			"p3": [
				"./dist/p3.d.ts"
			]
		}
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/junhoyeo/use-color.git",
		"directory": "packages/use-color"
	},
	"author": "Junho Yeo <hanaro0704@gmail.com>",
	"license": "MIT",
	"keywords": [
		"color",
		"typescript",
		"type-safe",
		"oklch",
		"css",
		"hex",
		"rgb",
		"accessibility",
		"wcag"
	],
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit",
		"size-limit": "size-limit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"prepublishOnly": "pnpm run build"
	},
	"size-limit": [
		{
			"path": "dist/index.js",
			"limit": "12 KB"
		},
		{
			"path": "dist/core.js",
			"limit": "9 KB"
		},
		{
			"path": "dist/a11y.js",
			"limit": "4 KB"
		},
		{
			"path": "dist/names.js",
			"limit": "4 KB"
		},
		{
			"path": "dist/p3.js",
			"limit": "4 KB"
		}
	],
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@size-limit/preset-small-lib": "^12.0.0",
		"@vitest/coverage-v8": "^4.0.16",
		"expect-type": "^1.3.0",
		"fast-check": "^4.5.2",
		"size-limit": "^12.0.0",
		"terser": "^5.44.1",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	}
}
